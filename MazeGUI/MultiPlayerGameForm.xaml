<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI"
        xmlns:MazeUserControl="clr-namespace:MazeGUI.MazeUserControl" x:Name="window" x:Class="MazeGUI.MultiPlayerGameForm"
        mc:Ignorable="d"
        Title="MultiPlayerGameForm" Height="462.495" Width="1071.775" KeyUp="window_KeyUp">
    <Canvas HorizontalAlignment="Left" Height="430" VerticalAlignment="Top" Width="1058" Margin="0,0,-370,0">
        <StackPanel Height="357" Orientation="Horizontal"  Canvas.Left="10" Canvas.Top="63" Width="1038">
            <MazeUserControl:MazeBoard x:Name="clientBoard" Maze="{Binding ClientMaze}" Width="524"/>
            <MazeUserControl:MazeBoard x:Name="RivalBoard" Maze="{Binding RivalMaze}" Width="719"/>
        </StackPanel>
        <Label Content="My board" Canvas.Left="34" Canvas.Top="32" RenderTransformOrigin="0.361,0.045"/>
        <Label Content="Rival board" Canvas.Left="541" Canvas.Top="32" RenderTransformOrigin="0.361,0.045"/>
    </Canvas>
</Window>
