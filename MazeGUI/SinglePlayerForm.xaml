<Window x:Class="MazeGUI.SinglePlayerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI"
        mc:Ignorable="d"
        Title="SinglePlayerForm" Height="600" Width="597">
    <Grid x:Name="grdMaze" HorizontalAlignment="Right"  Width="587" Height="514" VerticalAlignment="Top" Margin="0,55,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border x:Name="brdrGrid" BorderBrush="#000000" BorderThickness="2" >
        </Border>
        <Button x:Name="btnMainMenu" Content="Main Menu" HorizontalAlignment="Left" Margin="375,-38,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <Button Content="Solve" HorizontalAlignment="Left" Margin="254,-38,0,0" VerticalAlignment="Top" Width="75" Height="20" RenderTransformOrigin="-0.836,2.134"/>
        <Button Content="Restart Maze" HorizontalAlignment="Left" Margin="129,-38,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
    </Grid>
</Window>
