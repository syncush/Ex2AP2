<Window x:Class="MazeGUI.MultiPlayerSettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGUI"
        mc:Ignorable="d"
        Title="MultiPlayerSettingsForm" Height="300" Width="300">
    <Grid>
        <Grid Margin="0,0,0,20">
            <Label Content="Maze Name" HorizontalAlignment="Left" Margin="20,114,0,0" VerticalAlignment="Top"/>
            <Label Content="Games:" HorizontalAlignment="Left" Margin="35,30,0,0" VerticalAlignment="Top"/>
            <Label Content="Maze Rows" HorizontalAlignment="Left" Margin="20,149,0,0" VerticalAlignment="Top"/>
            <Label Content="Maze Cols" HorizontalAlignment="Left" Margin="20,180,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="txtbxMazeName" Text ="{Binding GameName}"  HorizontalAlignment="Left" Height="23" Margin="117,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox Text="{Binding Rows}" x:Name="txtbxMazeRows" HorizontalAlignment="Left" Height="23" Margin="117,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64" PreviewTextInput="NumericTxtBox"/>
            <ComboBox Name="cmbxGames" ItemsSource="{Binding Path=AvaiableGamesList}" SelectedValue="{Binding Path=AvaiableGamesList}" HorizontalAlignment="Left" Margin="117,30,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="1"/>
            <Button Content="Join Game" HorizontalAlignment="Left" Margin="117,79,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.145,0.508"/>
            <TextBox Text="{Binding Cols}" x:Name="txtbxMazeCols" HorizontalAlignment="Left" Height="23" Margin="117,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64" PreviewTextInput="NumericTxtBox"/>
            <Button x:Name="btnStartGame" Content="Start" HorizontalAlignment="Left" Margin="117,224,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.145,0.508"/>

        </Grid>
    </Grid>
</Window>
